<c:FragmentDefinition
	xmlns="sap.m"
	xmlns:c="sap.ui.core">
    <Panel>
        <headerToolbar>
            <Toolbar>
                <c:Icon src="{= ${incidenceModel>status}==='0' ? 'accept' : 
                                ${incidenceModel>status}==='1' ? 'alert' :
                                ${incidenceModel>status}==='2' ? 'decline' : '' }"/>
                <Title text="{i18n>incidence} {incidenceModel>index} {path : 'incidenceModel>date',
                                                                      formatter: '.Formatter.dateFormat'}"/>
                <ToolbarSpacer/>
                <c:Icon src="delete" press="onDeleteIncidence"/>
            </Toolbar>
        </headerToolbar>
        <content>
            <HBox>
                <VBox class="sapUiSmallMarginEnd">
                    <Text text="{i18n>incidenceDate}"/>
                    <DatePicker dateValue="{incidenceModel>date}"/>
                </VBox>
                <VBox visible="{= ${incidenceModel>date} !== '' &amp;&amp; ${incidenceModel>date} !== undefined}" class="sapUiSmallMarginEnd">
                    <Text text="{i18n>incidenceReason}"/>
                    <Input ></Input>
                </VBox>
                <VBox visible="{= ${incidenceModel>date} !== '' &amp;&amp; ${incidenceModel>date} !== undefined}">
                    <Text text="{i18n>incidenceType}"/>
                    <Select selectedKey="{incidenceModel>status}" forceSelection="false">
                        <c:Item key="0" text="{i18n>incidenceCorrect}"/>
                        <c:Item key="1" text="{i18n>incidencePending}"/>
                        <c:Item key="2" text="{i18n>incidenceError}"/>
                    </Select>
                </VBox>
            </HBox>
        </content>
    </Panel>
</c:FragmentDefinition>